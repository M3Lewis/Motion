<Window x:Class="Motion.Toolbar.MotionSenderSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motion Sender Settings" 
        Height="150" Width="250"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Frames Per Second:" VerticalAlignment="Center"/>
            <TextBox x:Name="FPSTextBox" Width="50" Margin="10,0,0,0" 
                     TextAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Graph Select:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <ComboBox x:Name="GraphSelectComboBox" Width ="140" Text="Graph Select" Margin="5" SelectionChanged="Graph_SelectionChanged"/>
        </StackPanel>
        
        
        <Button Grid.Row="2" Content="确定" Width="80" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="ConfirmButton_Click"/>
    </Grid>
</Window> 