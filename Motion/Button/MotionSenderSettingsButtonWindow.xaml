<Window x:Class="Motion.Toolbar.MotionSliderSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motion Sender Settings" 
        Height="120" Width="250"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Frames Per Second:" VerticalAlignment="Center"/>
            <TextBox x:Name="FPSTextBox" Width="50" Margin="10,0,0,0" 
                     TextAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Button Grid.Row="1" Content="确定" Width="80" Height="25"
                Click="ConfirmButton_Click"/>
    </Grid>
</Window> 