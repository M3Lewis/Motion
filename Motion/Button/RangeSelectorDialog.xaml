<Window x:Class="Motion.Views.RangeSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Range" Height="200" Width="300" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Minimum Value:" Margin="0,0,0,5"/>
            <ComboBox x:Name="MinValueComboBox" 
                      SelectionChanged="MinValueComboBox_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Maximum Value:" Margin="0,0,0,5"/>
            <ComboBox x:Name="MaxValueComboBox"
                      SelectionChanged="MaxValueComboBox_SelectionChanged"/>
        </StackPanel>

        <Button Grid.Row="4" Content="OK" Width="80" Height="25"
                Click="OkButton_Click"/>
    </Grid>
</Window> 