<Window x:Class="Motion.Views.RangeSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Range" Height="150" Width="300" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Time Interval:" Margin="0,0,0,5"/>
            <ComboBox x:Name="TimeIntervalComboBox"
                      SelectionChanged="TimeIntervalComboBox_SelectionChanged"/>
        </StackPanel>

        <Button Grid.Row="2" Content="OK" Width="80" Height="25"
                Click="OkButton_Click"/>
    </Grid>
</Window> 