<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slider Controller" Width="300" Height="180"
        x:Class="Motion.Toolbar.SliderControlWPF"
        Topmost="True"
        xmlns:local="clr-namespace:Motion.Toolbar">

    <Window.Resources>
        <Style x:Key="AutoUpdateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DDDDDD"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Background" Value="#90CAF9"/>
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Slider x:Name="slider" 
                Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                Margin="5" 
                Grid.Row="0"
                Grid.ColumnSpan="2"/>

        <TextBox x:Name="valueTextBox" 
                Text="{Binding Value, StringFormat={}{0:F0}, UpdateSourceTrigger=LostFocus}"
                Grid.Row="1" 
                Grid.ColumnSpan="2" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="60"
                TextAlignment="Center"
                Margin="5"
                PreviewTextInput="NumberValidationTextBox"
                KeyDown="ValueTextBox_KeyDown"
                LostFocus="ValueTextBox_LostFocus"/>

        <Button x:Name="minusButton" 
                Content="-" 
                Click="MinusButton_Click"
                MouseRightButtonDown="MinusButton_Click"
                Style="{StaticResource AutoUpdateButtonStyle}"
                Margin="5" 
                Grid.Row="2" 
                Grid.Column="0">
            <Button.ToolTip>
                左键点击: 减少1帧
                右键点击: 开始/停止自动递减
            </Button.ToolTip>
        </Button>
        <Button x:Name="plusButton" 
                Content="+" 
                Click="PlusButton_Click"
                MouseRightButtonDown="PlusButton_Click"
                Style="{StaticResource AutoUpdateButtonStyle}"
                Margin="5" 
                Grid.Row="2" 
                Grid.Column="1">
            <Button.ToolTip>
                左键点击: 增加1帧
                右键点击: 开始/停止自动递增
            </Button.ToolTip>
        </Button>
        <Button x:Name="minButton" 
                Content="MIN" 
                Click="MinButton_Click" 
                Margin="5" 
                Grid.Row="3" 
                Grid.Column="0"/>
        <Button x:Name="maxButton" 
                Content="MAX" 
                Click="MaxButton_Click" 
                Margin="5" 
                Grid.Row="3" 
                Grid.Column="1"/>
    </Grid>
</Window>